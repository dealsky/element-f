@import "variables"

@font-face
  font-family 'element'
  src url(icomoon-font-path + '/element.eot?9gqwzq')
  src url(icomoon-font-path + '/element.eot?9gqwzq#iefix') format('embedded-opentype'),
  url(icomoon-font-path + '/element.ttf?9gqwzq') format('truetype'),
  url(icomoon-font-path + '/element.woff?9gqwzq') format('woff'),
  url(icomoon-font-path + '/element.svg?9gqwzq#element') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'element' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-eye_off
  &:before
    content icon-eye_off
    color #666

.icon-eye
  &:before
    content icon-eye
    color #666

.icon-lock
  &:before
    content icon-lock

.icon-user
  &:before
    content icon-user
    color #4d4d4d

